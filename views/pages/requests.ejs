                    <option value="1">Fulano da Silva</option>
                    <option value="2">Ciclano Pereira</option>
                    <option value="3">Beltrano Costa e Silva Junior de Tal</option>
                    <option value="4">Fulano Antônio dos Santos da Silva</option>
                </select>
