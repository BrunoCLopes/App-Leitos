<script>
    function clearButton(){
        const type = document.getElementById('type-select');
        const bed = document.getElementById('bed-input');
        const professional = document.getElementById('professional-select');
        const textArea = document.getElementById('observations-text-area');

        type.value = "";
        bed.value = "";
        professional.value = "";
        textArea.value = "";
    }
</script>